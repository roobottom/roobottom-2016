{% macro m_gallery(images,type) %}
    <div class="m_gallery">
        {% for i in images %}
          <figure class="m_gallery__figure">
            <img src="{{site.imageServer}}r/600/600/{{type}}/{{ i.image }}" class="m_gallery__image"/>
            {% if i.caption %}
            <figcaption class="m_gallery__caption">{{ i.caption }}</figcaption>
            {% endif %}
          </figure>
        {% endfor %}
    </div>
{% endmacro %}
