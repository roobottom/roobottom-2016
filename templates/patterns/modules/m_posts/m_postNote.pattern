{% macro m_postNote(post) %}
  <article class="m_post m_post--note">
    {% if post.attributes.images %}
      <div class="m_post__gallery">
        {% for image in post.attributes.images %}
          {{ m_figure([image],'notes')}}
        {% endfor %}
      </div>
    {% endif %}
    <div class="m_post__body type">
      {{post.html_body}}
    </div>
  </article>
{% endmacro %}
