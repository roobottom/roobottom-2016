{% macro m_posts (posts,heading="h2",link=true) %}
  {% for post in posts %}
    {% if post.attributes.type == 'diary' %}
      {{ m_postDiary (post,heading,link) }}
    {% endif %}
    {% if post.attributes.type == 'gallery' %}
      {{ m_postGallery (post) }}
    {% endif %}
    {% if post.attributes.type == 'notes' %}
      {{ m_postNote(post) }}
    {% endif %}
  {% endfor %}
{% endmacro %}
